# Convex deployment URL (run 'npx convex dev' to get this)
NEXT_PUBLIC_CONVEX_URL=

# Clerk authentication keys (get from Clerk dashboard)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk webhook secret for user synchronization (get from Clerk dashboard > Webhooks)
CLERK_WEBHOOK_SECRET=

# Google Gemini API Configuration
GOOGLE_GEMINI_API_KEY=
GOOGLE_GEMINI_MODEL=gemini-1.5-flash
GOOGLE_GEMINI_API_ENDPOINT=https://generativelanguage.googleapis.com

# AI Analysis Configuration
AI_ANALYSIS_BATCH_SIZE=10
AI_ANALYSIS_RATE_LIMIT=100
AI_ANALYSIS_TIMEOUT=30000

# LangExtract Integration Configuration
LANGEXTRACT_ENABLED=true
LANGEXTRACT_TIMEOUT_MS=5000
LANGEXTRACT_MAX_RETRIES=2
LANGEXTRACT_FALLBACK_ENABLED=true
LANGEXTRACT_PROCESSING_LIMIT=1000
LANGEXTRACT_METRICS_ENABLED=true
LANGEXTRACT_ALERT_FAILURE_THRESHOLD=10
LANGEXTRACT_ALERT_LATENCY_THRESHOLD=5000

# Optional: Custom sign-in and sign-up URLs
# NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
# NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Development/Testing Configuration
PLAYWRIGHT_BASE_URL=http://localhost:3000
PLAYWRIGHT_MCP_ENABLED=false
PLAYWRIGHT_HEADLESS=true

